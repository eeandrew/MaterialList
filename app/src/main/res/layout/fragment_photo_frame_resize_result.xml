<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/photo_resize_frame"
    tools:context="com.shanghai.works.ate.snapnote.ui.PhotoFrameResizeResultFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photo_resize_result_image"/>

    <ImageButton
        android:layout_height="@dimen/normal_fab_size"
        android:layout_width="@dimen/normal_fab_size"
        android:id="@+id/photo_resize_result_ok"
        android:background="@drawable/normal_fab_ripple"
        android:stateListAnimator="@anim/normal_fab_anim"
        android:src="@drawable/ic_action_accept"
        android:layout_marginRight="@dimen/normal_fab_right_margin"
        android:layout_marginBottom="@dimen/normal_fab_bottom_margin"
        android:layout_gravity="right|bottom"
        android:translationZ="1dp" />


</FrameLayout>
