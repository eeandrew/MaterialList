<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--Note Card View Style-->
    <style name="NoteCardView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <!--Note Card Title Style-->
    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/bigger_title_size</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">@dimen/big_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <!--Note Card Tag Style-->
    <style name="CardTag">
        <item name="android:textColor">#424242</item>
    </style>

    <style name="CardTime">

    </style>

    <!--Node Card Left Button Style-->
    <style name="LeftButtonBaseStyle">
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--Node Card Right Button Style-->
    <style name="RightButtonBaseStyle" parent="@style/LeftButtonBaseStyle">
        <item name="android:textColor">@color/orange_button</item>
    </style>
</resources>
